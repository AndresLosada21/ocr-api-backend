# ======================
# SERVER CONFIGURATION
# ======================
PORT=8000
HOST=0.0.0.0
DEBUG=false
ENV=production
API_VERSION=v1

# ======================
# DATABASE CONFIGURATION
# ======================
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/ocr_api
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600
DATABASE_ECHO=false

# ======================
# OCR CONFIGURATION
# ======================
PADDLE_OCR_USE_GPU=false
PADDLE_OCR_LANG=pt
PADDLE_OCR_USE_ANGLE_CLS=true
PADDLE_OCR_USE_SPACE_CHAR=true
OCR_MODEL_DIR=/app/models/paddle_ocr

# ======================
# FILE PROCESSING
# ======================
MAX_IMAGE_SIZE_MB=10
MAX_REQUEST_SIZE_MB=50
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,bmp,tiff
TEMP_UPLOAD_DIR=/tmp/ocr_uploads
CLEANUP_TEMP_FILES=true
IMAGE_QUALITY_ENHANCEMENT=true
MAX_IMAGE_DIMENSION=4096
MIN_IMAGE_DIMENSION=32

# ======================
# SECURITY
# ======================
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=*
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_DAY=1000
SESSION_SECRET_KEY=change-this-in-production-to-a-secure-random-key

# ======================
# LOGGING
# ======================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=/app/logs/ocr_api.log
LOG_ROTATION_SIZE=100MB
LOG_RETENTION_DAYS=30

# ======================
# ANALYTICS
# ======================
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90
ENABLE_PERFORMANCE_METRICS=true
ENABLE_CLIENT_TRACKING=true

# ======================
# MONITORING
# ======================
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30
ENABLE_PROMETHEUS_METRICS=false
PROMETHEUS_PORT=9090

# ======================
# PERFORMANCE
# ======================
WORKER_PROCESSES=1
WORKER_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=75
MAX_CONCURRENT_JOBS=10
JOB_TIMEOUT_SECONDS=300
ENABLE_GZIP=true

# ======================
# FEATURES FLAGS
# ======================
ENABLE_OCR=true
ENABLE_BARCODE=true
ENABLE_QRCODE=true
ENABLE_BATCH_PROCESSING=false
ENABLE_WEBHOOKS=false